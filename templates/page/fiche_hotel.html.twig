			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
					<h3 class="modal-title" style="text-align: center;">Modification</h3>
				</div>
				<div class="modal-body">
					<form action="">
						<section>
							<div class="form-group">
								<label for="">Le Nautile :
								</label>
								<input type="number" class="input_n_modal" id = "ln">
							</div>
							<div class="form-group">
								<label for="">Sunset View :
								</label>
								<input type="number" class="input_n_modal" id = "sview">
							</div>
						</section>
						<section>
							<div class="form-group">
								<button type="submit" data-dismiss="modal" id="modif_nautile" class="btn btn-warning"><span>Enregistrer</span></button>
							</div>
						</section>
					</form>
				</div>

			</div>
		</div>
	</div>

	<!-- fin Modal modif  -->

</section>


{% endblock %}

{% block javascripts %}
    
<script src="{{ asset('js/cleave.min.js') }}"></script>

<script>

	$(document).ready(function () {
		var pseudo_hotel = "{{ hotel }}";
		$(document).on('click', 'button[data-target]', function(e){
			e.preventDefault();
            var tar = $(this).attr("data-target");
            if (tar == "#modal_form_fh_1") {
				
				var s_cp = $("#scp").text();
				var s_sf = $("#ssf").text();
				var s_cd = $("#scd").text();
				var s_sv = $("#ssv").text();

				$('#sf').val(s_sf);
				$('#cd').val(s_cd);
				$('#sv').val(s_sv);
				$('#mon_cp1').val(s_cp);


            } else if (tar == "#modal_form_fh_2") {
				var s_ln = $("#sln").text();

				var s_sview = $("#ssview").text();

				var ln = $('#ln').val(s_ln);

				var sview = $('#sview').val(s_sview);
            }
		})

		// ajax affichage

		function load_fiche(){
			
			$.ajax({
				url : "/profile/affiche_fiche/"+pseudo_hotel,
				type : "POST",
				success : function(response){
					$('#load_fiche').html(response);
				},
				error : function(params) {
					alert('erreur au niveau de load fiche');
				}
			})
		}

		load_fiche();

		$('#modif_suite').on('click', function(ev){
			ev.preventDefault();
			var cp = $('#mon_cp1').val();
			var sf = $('#sf').val();
			var cd = $('#cd').val();
			var sv = $('#sv').val();
			var data = {
				'cp' : cp,
				'sf' : sf,
				'cd' : cd,
				'sv' : sv,
				'option' : 'chambre',
			}
			$.ajax({
				//url : "/admin/modif/fiche/"+pseudo_hotel,
				url : "/profile/modif_fiche/"+pseudo_hotel,
				type : "POST",
				data : data,
				success : function(response){
					if(response){
						load_fiche();
					}
				},
				error : function(error){
					alert('erreur au niveau de modif fiche chambre');
				}
			})
		})

		$('#modif_nautile').on('click', function(ev){
			ev.preventDefault();
			var ln = $('#ln').val();
			var sview = $('#sview').val();

			var data = {
				'ln' : ln,
				'sview' : sview,
				'option' : 'no-chambre',
			}
			$.ajax({
				url : "/profile/modif_fiche/"+pseudo_hotel,
				type : "POST",
				data : data,
				success : function(response){
					if(response){
						load_fiche();
					}
				},
				error : function(error){
					alert('erreur au niveau de modif fiche chambre');
				}
			})
		})


    })
</script>


{% endblock %}